
unit test(input uint32 i)
{
  uint32 cycle(0);
  uint32 v(0);

  algorithm {

     __display("[0]",v);

    ->

      while (v < 10) {
/// FIXME: better error message, currently breaks on an assert
        __display("[1][0] v = %d",v);
        v = v + 1;
      ->
        __display("[1][1] v = %d",v);
      ->
        __display("[1][2] v = %d",v);

      }

    ->

      __display("[2]",v);

  }

  always_after {
    cycle = cycle + 1;
  }
}

unit main(output uint8 leds)
{
  uint32 cycle(0);

  test   t;

  algorithm {

    t <- (cycle);
    __display("started on cycle %d",cycle);
    while (!isdone(t)) { } // algorithm is not done until pipeline has finished
    __display("done on cycle %d",cycle);

  }

  always_after {
    cycle = cycle + 1;
  }
}
