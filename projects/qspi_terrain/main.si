    //}
    //  ---- display
    spiscreen_csn  = 0;
$$if SIMULATION then
    spiscreen_clk  = screen_clk; spiscreen_mosi = screen_mosi; // assign pins
    spiscreen_dc   = screen_dc;  spiscreen_resn = screen_resn;
$$end
$$if not NO_SERIAL and not SIMULATION then
/*
    // ---- leds
    leds                    = {wait_param, terrain_running, display.data_or_command, terrain.pixel_ready, screen_resn};
    // ---- config register
    config_register         = wait_param ? ui.data_out : config_register;
