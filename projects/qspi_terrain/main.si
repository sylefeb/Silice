  uint1  send_screen = 0;
  uint1  set_cfg_reg = 0;
  uint1  run_terrain = 0;
  uint1  terrain_running = 0;
*/
  // ---- always block (main logic)
  always {

    // ---- ram select
    ram_bank = 2b00; // bank at 1<<24
$$if not NO_SERIAL then
    // ---- uart
